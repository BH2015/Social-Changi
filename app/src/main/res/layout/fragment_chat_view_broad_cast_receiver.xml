<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_view_broadcast_receiver_height"
    android:background="@color/pink"
    tools:context="examples.android.com.socialatchangi.ChatViewBroadCastReceiverFragment">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sticker_id"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:tintMode="src_atop"
            android:background="#f48fb1"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/game_name"
                android:text="God of War"
                android:layout_weight="1"
                style="@style/SAC.TextAppearance.Title"/>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/arena"
                android:text="MultiUser"
                android:layout_weight="1"
                style="@style/SAC.TextAppearance.Title"/>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/startTime"
                android:text="10:00 AM, SGT"
                android:layout_weight="1"
                style="@style/SAC.TextAppearance.Title"/>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/arena_location"
                android:text="T2 Transit,Playzone,L3"
                android:layout_weight="1"
                style="@style/SAC.TextAppearance.Title"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
